@page "/{text?}"

<input type="text" @bind="_userInput" @bind:event="oninput" @onkeypress="KeyPressHandler" />

@foreach (var word in _output)
{
<p>
    <hr>
    <span style="font-weight: bold; color: blue;">@word.Elven</span>, <span style="font-style: italic">@word.Lang</span> <a href="./@word.Elven" target="_blank">[L]</a>
    <br>
    <span>@word.Meaning.</span>
</p>
}
